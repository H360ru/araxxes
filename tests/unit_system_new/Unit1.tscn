script/source = "extends Unit

onready var sprite:IsoSprite = $IsoSprite
onready var animator:AnimationPlayer = $IsoSprite/AnimationPlayer
onready var tween:Tween = $Tween

func _init():
	map_position = Vector2(3, 2)

func _process(delta):
	
	if scene_state.action_state == UnitSceneState.ActionStates.IN_MOVE:
		pass
#		sprite.direct_by_rad(scene_state.current_look_angle)
#		global_position = scene_state.current_global_position
#		map_position = scene_state.current_map_position
		
	elif scene_state.action_state == UnitSceneState.ActionStates.IDLE:
		sprite.direct_by_rad(scene_state.current_look_angle)

func on_new_state():
	if animator != null:
		if scene_state.action_state == UnitSceneState.ActionStates.IDLE:
			animator.play(\"Idle\")
		elif scene_state.action_state == UnitSceneState.ActionStates.IN_MOVE:
			animator.play(\"Walk\")

func step():
	tween.interpolate_property(self, \"global_position\", null, scene_state.current_global_position, 0.5, Tween.TRANS_CUBIC)
	tween.start()
	sprite.direct_by_rad(scene_state.current_look_angle)
	map_position = scene_state.current_map_position
"

